{
  "compilerOptions": {
    // ... other options generated by nest new ...
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true, // Required for TypeORM and class-validator
    "experimentalDecorators": true, // Required for TypeORM and NestJS decorators
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false, // Set to true for stricter checking if desired
    "noImplicitAny": false, // Set to true for stricter checking if desired
    "strictBindCallApply": false, // Set to true for stricter checking if desired
    "forceConsistentCasingInFileNames": false, // Set to true for stricter checking if desired
    "noFallthroughCasesInSwitch": false // Set to true for stricter checking if desired
  }
  // include, exclude sections should be as generated by nest new
}
